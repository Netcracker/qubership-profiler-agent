{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "labels": ["dependencies"],
  "schedule": ["every 3 weeks on Monday"],
  "packageRules": [
    {
      "matchPackagePrefixes": ["org.checkerframework"],
      "groupName": "checkerframework"
    },
    {
      "matchPackagePrefixes": ["org.openjdk.jmh"],
      "groupName": "jmh"
    },
    {
      "matchPackagePrefixes": ["com.github.vlsi"],
      "groupName": "com.github.vlsi"
    },
    {
      "matchPackagePrefixes": ["com.gradleup.nmcp"],
      "groupName": "com.gradleup.nmcp"
    },
    {
      "description": "logback 1.3.0 requires slf4j-api 2.0+, and we want using slf4j 1.7",
      "matchPackagePrefixes": ["ch.qos.logback"],
      "groupName": "logback",
      "allowedVersions": "< 1.3.0"
    },
    {
      "description": "Stick with slf4j 1.7, no JPMS/Jigsaw",
      "matchPackagePrefixes": ["org.slf4j"],
      "groupName": "slf4j",
      "allowedVersions": "< 1.8.0"
    }
  ]
}
