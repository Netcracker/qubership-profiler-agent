<configuration scan="true" scanPeriod="30 seconds">
  <!-- Enables debug of logback <statusListener class="com.netcracker.profiler.shaded.ch.qos.logback.core.status.OnConsoleStatusListener" /> -->
  <appender name="AUDIT_FILE" class="com.netcracker.profiler.shaded.ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date %level %X{req.remoteAddr} %X{req.xForwardedFor} %X{req.remoteUser} %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="com.netcracker.profiler.audit" level="INFO">
    <appender-ref ref="AUDIT_FILE" />
  </logger>

  <appender name="STDOUT" class="com.netcracker.profiler.shaded.ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date %relative %logger{10} %msg%n</pattern>
    </encoder>
  </appender>

  <root>
    <level value="info" />
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
