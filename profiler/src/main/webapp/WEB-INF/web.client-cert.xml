<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <filter>
        <filter-name>CompressingFilter</filter-name>
        <filter-class>com.netcracker.profiler.shaded.com.github.ziplet.filter.compression.CompressingFilter</filter-class>
    </filter>

    <filter>
        <filter-name>DummyAuthenticationFilter</filter-name>
        <filter-class>com.netcracker.profiler.security.DummyAuthenticationFilter</filter-class>
    </filter>

    <filter>
        <filter-name>DummySecurityFilter</filter-name>
        <filter-class>com.netcracker.profiler.security.DummySecurityFilter</filter-class>
    </filter>

    <filter>
        <filter-name>CachingFilter</filter-name>
        <filter-class>com.netcracker.profiler.filter.CachingFilter</filter-class>
    </filter>

    <filter>
        <filter-name>MDCInsertingServletFilter</filter-name>
        <filter-class>com.netcracker.profiler.shaded.ch.qos.logback.classic.helpers.MDCInsertingServletFilter</filter-class>
    </filter>

    <filter>
        <filter-name>UsernameFilter</filter-name>
        <filter-class>com.netcracker.profiler.audit.UsernameFilter</filter-class>
    </filter>

    <filter>
        <filter-name>ProfilerTimeoutFilter</filter-name>
        <filter-class>com.netcracker.profiler.filter.ProfilerTimeoutFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>MDCInsertingServletFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>DummyAuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>DummySecurityFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>UsernameFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CachingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CompressingFilter</filter-name>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CompressingFilter</filter-name>
        <url-pattern>/tree</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CompressingFilter</filter-name>
        <url-pattern>*.js</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CompressingFilter</filter-name>
        <url-pattern>*.css</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ProfilerTimeoutFilter</filter-name>
        <url-pattern>/js/calls.js</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ProfilerTimeoutFilter</filter-name>
        <url-pattern>/tree/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ProfilerTimeoutFilter</filter-name>
        <url-pattern>/js/tree.js</url-pattern>
    </filter-mapping>

    <listener>
        <listener-class>com.netcracker.profiler.servlet.LogbackInitializer</listener-class>
    </listener>

    <listener>
        <listener-class>com.netcracker.profiler.audit.SessionAuditListener</listener-class>
    </listener>

    <listener>
        <listener-class>com.netcracker.profiler.servlet.SpringBootInitializer</listener-class>
    </listener>

    <servlet>
        <servlet-name>CallFetcher</servlet-name>
        <servlet-class>com.netcracker.profiler.servlet.CallFetcher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TreeFetcher</servlet-name>
        <servlet-class>com.netcracker.profiler.servlet.TreeFetcher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Config</servlet-name>
        <servlet-class>com.netcracker.profiler.servlet.Config</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ThreadDump</servlet-name>
        <servlet-class>com.netcracker.profiler.servlet.ThreadDump</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RawData</servlet-name>
        <servlet-class>com.netcracker.profiler.servlet.RawData</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActivePODs</servlet-name>
        <servlet-class>com.netcracker.profiler.servlet.ActivePODsFetcher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DumpExporter</servlet-name>
        <servlet-class>com.netcracker.profiler.servlet.DumpExporterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StreamsDownloader</servlet-name>
        <servlet-class>com.netcracker.profiler.servlet.StreamsDownloaderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExcelExporter</servlet-name>
        <servlet-class>com.netcracker.profiler.servlet.ExcelExporterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Metrics</servlet-name>
        <servlet-class>com.netcracker.profiler.servlet.Metrics</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Config</servlet-name>
        <url-pattern>/config/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CallFetcher</servlet-name>
        <url-pattern>/js/calls.js</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RawData</servlet-name>
        <url-pattern>/get_clob/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TreeFetcher</servlet-name>
        <url-pattern>/tree/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TreeFetcher</servlet-name>
        <url-pattern>/js/tree.js</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Metrics</servlet-name>
        <url-pattern>/metrics/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ThreadDump</servlet-name>
        <url-pattern>/threaddump/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ActivePODs</servlet-name>
        <url-pattern>/fetchActivePods</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DumpExporter</servlet-name>
        <url-pattern>/exportDump</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StreamsDownloader</servlet-name>
        <url-pattern>/downloadStream</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExcelExporter</servlet-name>
        <url-pattern>/exportExcel</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Profiler</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>*</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>CLIENT-CERT</auth-method>
        <realm-name>Qubership Profiler</realm-name>
    </login-config>
</web-app>
